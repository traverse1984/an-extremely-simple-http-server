{
   "include": ["./src"],
   "compilerOptions": {
      "module": "commonjs",
      "target": "esnext",
      "removeComments": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "outDir": "./dist",
      "incremental": true,
      "skipLibCheck": true,
      "strictNullChecks": true,
      "strict": true,
      "noImplicitAny": true,
      "forceConsistentCasingInFileNames": true
   }
}
